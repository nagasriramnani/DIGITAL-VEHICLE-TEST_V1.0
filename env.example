# Virtual Testing Assistant Configuration
# Copy this file to .env and update with your values

# ===================================
# Neo4j Configuration
# ===================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=please_change_me

# ===================================
# PostgreSQL + pgvector Configuration
# ===================================
PG_CONN=postgresql+psycopg2://postgres:pass@localhost:5432/vta

# ===================================
# Business Configuration
# ===================================
ENGINEERING_HOURLY_RATE=75
CAMPAIGNS_PER_YEAR=8

# ===================================
# HuggingFace LLM Configuration (Local, Offline)
# ===================================
HF_LLM_MODEL_ID=TheBloke/Mistral-7B-Instruct-v0.2-GGUF
HF_DEVICE=auto
HF_LOAD_8BIT=false
HF_MAX_NEW_TOKENS=512
HF_TEMPERATURE=0.2

# ===================================
# Embedding Model
# ===================================
EMBEDDING_MODEL_NAME=sentence-transformers/all-mpnet-base-v2

# ===================================
# Application Settings
# ===================================
APP_NAME=Virtual Testing Assistant
DEBUG=false
LOG_LEVEL=INFO

